// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Lead {
    id         Int        @id @default(autoincrement())
    firstName  String
    lastName   String
    email      String
    websiteUrl String
    country    String
    resumeUrl  String?
    moreInfo   String?
    status     LeadStatus @default(PENDING)

    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    LeadVisa  LeadVisa[]
}

enum LeadStatus {
    PENDING
    REACHED_OUT
}

model LeadVisa {
    leadId Int
    visaId Int

    lead Lead @relation(fields: [leadId], references: [id])
    visa Visa @relation(fields: [visaId], references: [id])

    @@id([leadId, visaId])
    @@index([visaId], name: "idx_visaId")
}

model Visa {
    id       Int        @id @default(autoincrement())
    name     String     @unique
    LeadVisa LeadVisa[]
}
