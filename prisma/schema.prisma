model Lead {
    id                   Int      @id @default(autoincrement())
    firstName            String
    lastName             DateTime @default(now())
    email                String   @unique
    countryOfCitizenship String
    websiteUrl           String?
    moreInfo             String?

    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    LeadVisa  LeadVisa[]
}

model LeadVisa {
    leadId Int
    visaId Int

    lead Lead @relation(fields: [leadId], references: [id])
    visa Visa @relation(fields: [visaId], references: [id])

    @@id([leadId, visaId])
    @@index([visaId], name: "idx_visaId")
}

model Visa {
    id       Int        @id @default(autoincrement())
    name     String     @unique
    LeadVisa LeadVisa[]
}
